            let div2 = document.getElementById("div2");
            let div3 = document.getElementById("div3");
            liuno.addEventListener("click", function () {
                div1.style.display = "";
                div2.style.display = "none";
              
            });

        }
        function mostrar2()
        {
            pageredirect()
            let lidos = document.getElementById("item2");
            let div1 = document.getElementById("div1");
            let div2 = document.getElementById("div2");
            let div3 = document.getElementById("div3");
            lidos.addEventListener("click", function () {
                div1.style.display = "none";
                div2.style.display = "";
            });}
        function mostrar3()
        {
            let litres = document.getElementById("item3");
            let div1 = document.getElementById("div1");
            let div2 = document.getElementById("div2");

            liuno.addEventListener("click", function () {
                div1.style.display = "none";
                div2.style.display = "none";
                div3.style.display = "";
            });
        }
    function redirectsetting() {
        window.location.href = '@Url.Action("Setting", "Homeuser", new { area = "CAPAUSER" })';
    }

        function pageredirect() {

            var sPath = window.location.pathname;
            var sPage = sPath.substring(sPath.lastIndexOf('/') + 1);
            if (sPage == "Setting") {
                window.location.href = '@Url.Action("index", "Homeuser", new { area = "CAPAUSER" })';
            }
        }

        

        var sPath = window.location.pathname;
        var sPage = sPath.substring(sPath.lastIndexOf('/') + 1);

    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
